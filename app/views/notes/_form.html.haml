= form_for @note1, html: { multipart: true }, :remote => true do |f|
	- if @note1.errors.any?
		#errors
			%p
				= @note1.errors.count
				Prevented this note froms saving
			%ul
				- @note1.errors.full_messages.each do |msg|
					%li= msg
	.panel-body
		= f.text_field :title, input_html: { class: 'form-control', :id => "message"}
		= f.text_field :description, input_html: { class: 'form-control', :id => "message"}
	= f.button :submit, class: "btn btn-primary", remote: true
